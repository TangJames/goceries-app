<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title> Go-ceries: Storefront </title>
	<script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
	<script src="/scripts/storefront.js"></script>

	<link rel="stylesheet" href="/styles/storefront.css" media="screen" />
	<link href="https://fonts.googleapis.com/css?family=Bungee+Shade|Roboto+Condensed:300,300i,400,400i,700,700i&amp;subset=latin-ext" rel="stylesheet">
</head>
<body>
    <% if (user && user.username) { %>


	<header>
		<h1>Go-ceries</h1>
		<nav></nav>
	</header>
	<main>
		<!-- <div id="select-category">
			<h3>Category:</h3>
		</div> -->

		<section class="create-order">
			<div class="products">
				<!-- selected disabled hidden -->
				<div class="products-title"><h3>Products</h3> <select id="select-category">
					<option value="" >Select Category</option>
				</select></div>
				<div id="select-products">

				</div>

			</div>
			<div class="cart">
				<h3>Cart</h3>
				<div id="edit-cart">

				</div>
				<hr/>
				<div class="cart-totals">
					<div><span class="sub-total">Subtotal +</span> <span id="sub-total-value">Subtotal</span></div>
					<div><span class="tax-total">Tax (8.25%) =</span> <span id="tax-total-value">Subtotal</span></div>
					<div><span class="order-total">Order Total</span> <span id="order-total-value">Subtotal</span></div>
				</div>
				<button id="submit-cart" class="submit-cart">Complete Order</button>

			</div>
		</section>

	</main>

	<footer>
	</footer>
    <% } else { %>
        You're not logged in. </h2>
        <a href="/home/login">Log in</a>
    <% } %>
</body>
</html>
